
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shopkeeper</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0px;
            padding: 0px;
        }

        .header {
            background-color: #d00606;
            overflow: hidden;
        }

            .header h1 {
                float: left;
                padding: 14px 16px;
                color: white;
            }

            .header a {
                float: right;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                /* Change the color of links on hover */
                .header a:hover {
                    background-color: #ddd;
                    color: black;
                }

                /* Add a color to the active/current link */
                .header a.active {
                    background-color: #04AA6D;
                    color: white;
                }


        body {
            background-image: url("https://mir-s3-cdn-cf.behance.net/project_modules/disp/99bb0716479553.562ac770b180d.gif");
            background-size: 100%;
            backdrop-filter: blur(2px);
        }
        .container {
            height: 100vh;
            width: 100%;
            justify-content: center;
            align-items: center;
            align-items: center;
        }

        .box {
            height: auto;
            width: auto;
            border: 2px solid black;
            background: #fff0;
        }
        h2 {
            text-align: center;
            margin-top: 20px;
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            height: 161px;
            width: 100%;
            margin: 12px 0;
            background-color: #80808000;
        }

        tr:nth-child(even) {
            background-color: #ffa500ad;
        }

        tr:nth-child(odd) {
            background-color: #3ea63e66;
        }

        #rows {
            color: red;
            text-align: center;
        }

        #rowses {
            padding:6px 0;
            color: black;
            text-align: center;
        }
        td , th{
            padding: 20px 0px;
        }
        .btn {
            border: none;
            border-radius: 17px;
            color: blue;
            border: 2px solid;
            margin-left: 24px;
            padding: 6px 13px;
        }

            .btn:hover {
                background-color: #4CAF50; /* Green */
                color: black;
                cursor: pointer;
                border: 2px solid black;
            }

        a {
            cursor: default;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>DESI FOOD COMPANY..</h1>
        <a href="~/Login/ChangePass">Change Password</a>
        <a href="~/Login/Logout">Logout</a>

    </div>
    <div class="container">
        <h2> HELLO STOREKEEPER </h2>
        <h3>Orders Dispatched by you are.. </h3>
        @if (ViewBag.OrderList != null)
        {

            <div class="box">
                <table border="1" class="table">
                    <tr id="rows">
                        <th>OrderNo</th>
                        <th>Name</th>
                        <th>ContactNo</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Status </th>
                        <th>Dispatched By</th>
                        <th>Delivery Boy</th>
                        <th colspan="2">Action</th>
                    </tr>
                    @foreach (var Item in ViewBag.OrderList)
                    {
                        <tr id="rowses">
                            <td>@Item.OrderNo</td>
                            <td>@Item.Name</td>
                            <td>@Item.ContactNo</td>
                            <td>@Item.Address</td>
                            <td>@Item.City</td>
                            <td>@Item.StatusReasonText</td>
                            <td>@Item.DispatchedByName</td>
                            <td>@Item.DeliveredByName</td>
                            @if (Item.StatusReasonValue == 227830000)
                            {
                                <form>
                                <td><button type="submit" class="btn" formaction='@Url.Action("UpdateOrderStatus", "Order", new {Id = @Item.Id })'>Ready To move</button></td>
                                </form>
                            }
                            else if (Item.StatusReasonValue == 227830002)
                            {
                                <form>
                                <td><button type="submit" class="btn" formaction='@Url.Action("UpdateOrderStatus", "Order", new {Id = @Item.Id })'>Shipped</button></td>
                                </form>
                            }
                            else
                            {
                                <td>@Item.StatusReasonText</td>
                            }
                        </tr>
                    }
                </table>
              
            </div>
        }
    </div>
</body>
</html>
