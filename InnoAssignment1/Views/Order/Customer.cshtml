
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        * {
            box-sizing: border-box;
            margin: 0px;
            padding: 0px;
        }

        body, html {
            width: 100vw;
            height: 100vh;
        }

        .header {
            background-color: #d00606;
            overflow: hidden;
            height: 60px;
        }

            .header h1 {
                float: left;
                padding: 14px 16px;
                color: white;
            }

            .header a {
                float: right;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                /* Change the color of links on hover */
                .header a:hover {
                    background-color: #ddd;
                    color: black;
                }

                /* Add a color to the active/current link */
                .header a.active {
                    background-color: #04AA6D;
                    color: white;
                }


        /*  body {
            background-image: url("https://static.vecteezy.com/system/resources/previews/002/032/336/large_2x/frame-of-fresh-ingredients-on-a-white-background-free-photo.jpg");
            background-size: 100%;
            backdrop-filter: blur(4px);
        }*/
        .container {
            margin: 0px;
            padding: 0px;
            height: calc( 100% - 60px);
            width: 100vw;
            background-image: url("https://static.vecteezy.com/system/resources/previews/002/032/336/large_2x/frame-of-fresh-ingredients-on-a-white-background-free-photo.jpg");
            background-size: 100%;
            backdrop-filter: blur(4px);
            justify-content: center;
            align-items: center;
            overflow-y: scroll;
        }

        .box {
            height: auto;
            width: auto;
            /* border: 2px solid black;*/
            background: #ffffff0a;
        }

        .child {
            text-align: center;
        }



        h1 {
            padding-top: 5px;
            text-align: center;
            color: black;
            margin-bottom: 10px;
        }

        h3 {
            text-align: center;
            color: black;
        }

        #table {
            width: 100%;
            /*margin: 4px;*/
            border-block: solid;
        }

        tr:nth-child(even) {
            background-color: #ffa500ad;
        }

        tr:nth-child(odd) {
            background-color: #3ea63e66;
        }

        #rows {
            color: red;
            text-align: center;
        }

        #rowses {
            color: black;
            text-align: center;
        }

        .btn {
            border: none;
            border-radius: 17px;
            color: blue;
            border: 2px solid;
            margin-left: 24px;
            padding: 6px 13px;
        }

            .btn:hover {
                background-color: #4CAF50; /* Green */
                color: black;
                cursor: pointer;
                border: 2px solid black;
            }

        a {
            cursor: default;
        }

        #crtord {
            width: 200px;
            height: 51px;
            border: none;
            border-radius: 17px;
            padding-left: 7px;
            color: blue;
            margin-top: 13px;
            position: absolute;
            right: 0px;
            top: 0px;
        }

        th, td {
            padding: 10px 0px;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Customer</title>
</head>
<body>
    <div class="header">
        <h1>DESI FOOD COMPANY..!</h1>
        <a href="~/Login/ChangePass">Change Password</a>
        <a href="~/Login/Logout">Logout</a>

    </div>
    <div class="container">
        <div class="child">
            <a href="~/Order/CreateOrder">
                <img src="https://techkiddies.com/wp-content/uploads/2022/05/2-order_now1-1.gif" id="crtord" />
                @*<input type="submit" value="New Order" id="crtord" />*@
            </a>
        </div>
        <h1> HELLO CUSTOMER</h1>
        <h3>Your previous orders are </h3>



        <div class="box">
            @if (ViewBag.OrderList != null)
            {

                <table border="0" id="table">
                    <tr id="rows">
                        <th>OrderNo</th>
                        <th>Name</th>
                        @*<th>Food Name</th>*@
                        <th>ContactNo</th>
                        <th>Address</th>
                        <th>DispatchedByName</th>
                        <th>Deliverey Boy</th>
                        <th>StatusReasonValue </th>
                        @*<th>TotalAmount</th>*@
                        <th colspan="2">Action</th>
                    </tr>
                    @foreach (var Item in ViewBag.OrderList)
                    {
                        <tr id="rowses">
                            <td>@Item.OrderNo</td>
                            <td>@Item.Name</td>
                            @*<td>@Item.Name</td>*@
                            <td>@Item.ContactNo</td>
                            <td>@Item.Address</td>
                            <td>@Item.DispatchedByName</td>
                            <td>@Item.DeliveredByName</td>
                            <td>@Item.StatusReasonText</td>
                            @*<td>@Item.TotalAmount</td>*@
                            <form>
                                @if (Item.StatusReasonValue >= 227830002)
                                {

                                <td colspan="2"><button type="submit" class="btn" formaction='@Url.Action("ViewOrder", "Order",  new { Id = @Item.Id })'>More Details</button></td>
                            }
                            else
                            {
                                <td><button type="submit" class="btn" formaction='@Url.Action("ViewOrder", "Order",  new { Id = @Item.Id })'>More Details</button></td>

                            }
                                </form>
                                @if (Item.StatusReasonValue < 227830002 && Item.StatusReasonValue >= 227830000)
                                {
                                    <form>
                                    <td><button type="submit" class="btn" formaction='@Url.Action("CancelOrder", "Order", new { Id = @Item.Id })'>Cancel Order</button></td>
                                    </form>
                                }
                            </tr>
                        }
                </table>

            }
            else
            {
                < h3 > You haven't placed any order yet place a fresh new order from here' </ h3 >
            }



        </div>
    </div>

</body>
</html>
